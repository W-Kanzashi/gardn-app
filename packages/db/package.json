{
  "name": "@acme/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    },
    "./nanoid": {
      "types": "./dist/nanoid.d.ts",
      "default": "./src/nanoid.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch && turso dev --db-file local.db",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "push": "pnpm with-env drizzle-kit push",
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:studio": "pnpm with-env drizzle-kit studio --port 8082",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@libsql/client": "^0.12.0",
    "@t3-oss/env-core": "^0.11.1",
    "better-sqlite3": "^11.3.0",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "nanoid": "^5.0.7",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@acme/turso-cli": "workspace:*",
    "@types/better-sqlite3": "^7.6.11",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.24.2",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@acme/prettier-config"
}
